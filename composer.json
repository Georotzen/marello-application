{
    "name": "marellocommerce/marello-application-dev",
    "description": "Marello ERP for Commerce dev",
    "homepage": "https://github.com/marellocommerce/marello-application-dev.git",
    "license": "OSL-3.0",
    "autoload": {
        "psr-0": {
            "Marello\\Bundle\\": "src/Marello/src",
            "MarelloEnterprise\\Bundle\\": "src/MarelloEnterprise/src",
            "": "src/"
        }
    },
    "repositories": [
        {
          "type": "composer",
          "url": "http://packagist.orocrm.com"
        }
    ],
    "require": {
        "php": ">=5.4.9",
        "oro/platform": "1.8.*"
    },
    "config": {
        "component-dir": "web/bundles/components"
    },
    "scripts": {
        "test": [
            "phpunit -c app --tap --testsuite=\"Unit Tests\"",
            "phpunit -c app --tap --testsuite=\"Functional Tests\""
        ],
        "test-extended": [
            "rm -rf app/cache/*",
            "app/console oro:install --env test --organization-name Oro --user-name admin --user-email admin@example.com --user-firstname John --user-lastname Doe --user-password admin --sample-data n --application-url http://localhost --force",
            "app/console doctrine:fixture:load --no-debug --append --no-interaction --env=test --fixtures ./vendor/oro/platform/src/Oro/Bundle/TestFrameworkBundle/Fixtures",
            "app/console oro:test:schema:update --env test",
            "phpunit -c app --tap --testsuite=\"Unit Tests\"",
            "phpunit -c app --tap --testsuite=\"Functional Tests\""
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^3.0@dev"
    }
}
