{
    "name": "marellocommerce/marello-application-dev",
    "description": "Marello ERP for Commerce dev",
    "homepage": "https://github.com/marellocommerce/marello-application-dev.git",
    "license": "OSL-3.0",
    "autoload": {
        "psr-0": {
            "Marello\\Bundle\\": "src/Marello/src",
            "MarelloEnterprise\\Bundle\\": "src/MarelloEnterprise/src",
            "": "src/"
        }
    },
    "repositories": {
        "composer": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    },
    "require": {
        "oro/platform": "2.0.*",
        "oro/platform-serialised-fields": "2.0.*",
        "oro/calendar-bundle": "2.0.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "3.1.2",
        "behat/behat": "3.2.2",
        "behat/mink-extension": "2.2.*",
        "behat/mink-selenium2-driver": "1.*",
        "behat/symfony2-extension": "2.1.1",
        "nelmio/alice": "2.2.*",
        "phpunit/phpunit": "5.7.*",
        "phpunit/phpunit-selenium": "3.0.*",
        "johnkary/phpunit-speedtrap": "1.0.*",
        "mybuilder/phpunit-accelerator": "1.2.*",
        "squizlabs/php_codesniffer": "2.7.*",
        "phpmd/phpmd": "2.5.*",
        "sebastian/phpcpd": "2.0.*"
    },
    "config": {
        "component-dir": "web/bundles/components",
        "bin-dir": "bin",
        "fxp-asset": {
            "asset-installer-paths": {
                "npm-asset-library": "web/bundles/npmassets",
                "bower-asset-library": "web/bundles/bowerassets"
            }
        }
    },
    "scripts": {
        "test": [
            "phpunit -c app --tap --testsuite=\"Unit Tests\"",
            "phpunit -c app --tap --testsuite=\"Functional Tests\""
        ],
        "test-extended": [
            "rm -rf app/cache/*",
            "rm -rf app/logs/*",
            "app/console oro:install --env test --organization-name Oro --user-name admin --user-email admin@example.com --user-firstname John --user-lastname Doe --user-password admin --sample-data n --application-url http://localhost --force --drop-database --timeout 3600",
            "phpunit -c app --tap --testsuite=\"Unit Tests\"",
            "phpunit -c app --tap --testsuite=\"Functional Tests\""
        ],
        "post-install-cmd": [
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::checkComposerPlugin",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
        ],
        "post-update-cmd": [
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::checkComposerPlugin",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "asset-installer-paths": {
            "npm-asset-library": "web/bundles/npmassets",
            "bower-asset-library": "web/bundles/bowerassets"
        }
    }
}
